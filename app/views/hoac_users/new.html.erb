<% provide(:title, 'Sign up') %>
<div class="row">
	<div class="large-6 large-offset-3 columns">
	<center><h1>Sign up</h1></center>
	<%= form_for(@user, url: signup_path) do |f| %>
	<%= render 'hoac_users/shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "button large-12 hoaccolor" %>
    <% end %>
	</div>
</div>

<div class="row">
	<div class="large-12 columns center-text">
		<h3>OR</h3>
		<p>Have an account ? <span><%= link_to 'log in', login_path%></span></p> 
	</div>
</div>


<%= render 'hoac_users/shared/hoacfooter' %>